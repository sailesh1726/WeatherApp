<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityNameEditText"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/findWeatherButton"
        android:layout_toStartOf="@+id/findWeatherButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="booooooo"
        android:id="@+id/latTextView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/lonTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lonTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/cityNameEditText"
        android:layout_alignLeft="@+id/latTextView"
        android:layout_alignStart="@+id/latTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/cityTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/latTextView"
        android:layout_alignLeft="@+id/latTextView"
        android:layout_alignStart="@+id/latTextView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/findWeatherButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>